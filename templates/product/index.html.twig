{# templates/product/index.html.twig #}
{% extends 'vector.html.twig' %}

{% block title %}Product Search{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
            üõçÔ∏è Product Search
        </h1>
        <p class="text-xl text-gray-600">
            Search products using natural language powered by AI
        </p>
    </div>

    {# Search Form #}
    <div class="max-w-3xl mx-auto mb-12">
        <form action="{{ path('product_search') }}" method="get" class="space-y-4">
            {# Search Input #}
            <div>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                    <input
                        type="text"
                        name="q"
                        placeholder="Try: 'comfortable running shoes' or 'laptop for programming'..."
                        class="block w-full pl-10 pr-3 py-4 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-lg"
                        autofocus>
                </div>
            </div>

            {# Category Filter #}
            <div class="flex gap-4">
                <select name="category" class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">All Categories</option>
                    {% for cat in categories %}
                        <option value="{{ cat }}">{{ cat|capitalize }}</option>
                    {% endfor %}
                </select>

                <button type="submit" class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition">
                    Search
                </button>
            </div>
        </form>
    </div>

    {# Example Queries #}
    <div class="max-w-3xl mx-auto">
        <p class="text-sm text-gray-600 mb-3">Try these example searches:</p>
        <div class="flex flex-wrap gap-2">
            {% set examples = [
                'affordable smartphones with good cameras',
                'gifts for tech enthusiasts',
                'comfortable office chairs under $500',
                'best books for learning programming'
            ] %}
            {% for example in examples %}
                <a href="{{ path('product_search', {q: example}) }}"
                   class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition">
                    {{ example }}
                </a>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

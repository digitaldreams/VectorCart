{# templates/product/search.html.twig #}
{% extends 'vector.html.twig' %}

{% block title %}Search Results - Products{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Search Form (Compact) #}
    <div class="mb-8">
        <form action="{{ path('product_search') }}" method="get" class="max-w-3xl mx-auto">
            <div class="flex gap-4">
                <input
                    type="text"
                    name="q"
                    value="{{ query }}"
                    placeholder="Search products..."
                    class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    autofocus>

                <select name="category" class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                    <option value="">All Categories</option>
                    {% for cat in categories %}
                        <option value="{{ cat }}" {% if cat == category %}selected{% endif %}>
                            {{ cat|capitalize }}
                        </option>
                    {% endfor %}
                </select>

                <button type="submit" class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
                    Search
                </button>
            </div>
        </form>
    </div>

    {# Results #}
    {% if query %}
        <div class="mb-6">
            <div class="flex items-center justify-between">
                <h2 class="text-2xl font-bold text-gray-900">
                    Search Results for "{{ query }}"
                    {% if category %}
                        <span class="text-lg font-normal text-gray-600">in {{ category|capitalize }}</span>
                    {% endif %}
                </h2>
                <span class="text-sm text-gray-500">
                    {{ products|length }} results in {{ searchTime }}ms
                </span>
            </div>
        </div>

        {% if products|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for product in products %}
                    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition overflow-hidden">
                        <div class="h-48 bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center relative">
                            <span class="text-6xl">üõçÔ∏è</span>
                            {# Similarity Score Badge #}
                            {% if product.similarityScore is not null %}
                                <div class="absolute top-3 right-3 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg">
                                    <div class="flex items-center gap-2">
                                        <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                        </svg>
                                        <span class="text-sm font-bold text-gray-900">{{ (product.similarityScore * 100)|number_format(1) }}%</span>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="p-6">
                            <div class="flex items-start justify-between mb-2">
                                <h3 class="text-lg font-semibold text-gray-900 flex-1">
                                    {{ product.name }}
                                </h3>
                                <span class="ml-2 px-2 py-1 bg-indigo-100 text-indigo-800 text-xs font-semibold rounded-full">
                                    {{ product.category }}
                                </span>
                            </div>

                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                                {{ product.description }}
                            </p>

                            <div class="flex items-center justify-between">
                                <span class="text-2xl font-bold text-indigo-600">
                                    ${{ product.price }}
                                </span>
                                <span class="{% if product.inStock %}text-green-600{% else %}text-red-600{% endif %} text-sm font-medium">
                                    {% if product.inStock %}
                                        ‚úì In Stock
                                    {% else %}
                                        ‚úó Out of Stock
                                    {% endif %}
                                </span>
                            </div>

                            {% if product.tags %}
                                <div class="mt-4 flex flex-wrap gap-2">
                                    {% for tag in product.tags %}
                                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                                            #{{ tag }}
                                        </span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No products found</h3>
                <p class="mt-1 text-sm text-gray-500">Try adjusting your search terms</p>
            </div>
        {% endif %}
    {% endif %}

    {# Back Button #}
    <div class="mt-8 text-center">
        <a href="{{ path('product_index') }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
            ‚Üê Back to Search
        </a>
    </div>
</div>
{% endblock %}

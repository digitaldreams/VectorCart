{# templates/product/search.html.twig #}
{% extends 'vector.html.twig' %}

{% block title %}Search Results - Products{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {# Search Form (Compact) #}
    <div class="mb-8">
        <form action="{{ path('product_search') }}" method="get" class="max-w-3xl mx-auto">
            <div class="flex gap-4">
                <input
                    type="text"
                    name="q"
                    value="{{ query }}"
                    placeholder="Search products..."
                    class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    autofocus>

                <select name="category" class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                    <option value="">All Categories</option>
                    {% for cat in categories %}
                        <option value="{{ cat }}" {% if cat == category %}selected{% endif %}>
                            {{ cat|capitalize }}
                        </option>
                    {% endfor %}
                </select>
                 <select name="score" class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                    <option value="0.75" {% if 0.75 == score %}selected{% endif %}>Best match</option>
                    <option value="0.60" {% if 0.60 == score %}selected{% endif %}>Related match</option>
                </select>

                <button type="submit" class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
                    Search
                </button>
            </div>
        </form>
    </div>

    {# Results #}
    {% if query %}
        <div class="mb-6">
            <div class="flex items-center justify-between">
                <h2 class="text-2xl font-bold text-gray-900">
                    Search Results for "{{ query }}"
                    {% if category %}
                        <span class="text-lg font-normal text-gray-600">in {{ category|capitalize }}</span>
                    {% endif %}
                </h2>
                <span class="text-sm text-gray-500">
                    {{ totalResults }} total results | Showing page {{ page }} of {{ totalPages }} | {{ searchTime }}ms
                </span>
            </div>
        </div>

        {% if products|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for product in products %}
                    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition overflow-hidden">
                        <div class="h-48 bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center relative">
                            <span class="text-6xl">üõçÔ∏è</span>
                            {# Similarity Score Badge #}
                            {% if product.similarityScore is not null %}
                                <div class="absolute top-3 right-3 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg">
                                    <div class="flex items-center gap-2">
                                        <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                        </svg>
                                        <span class="text-sm font-bold text-gray-900">{{ (product.similarityScore * 100)|number_format(1) }}%</span>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="p-6">
                            <div class="flex items-start justify-between mb-2">
                                <h3 class="text-lg font-semibold text-gray-900 flex-1">
                                    {{ product.name }}
                                </h3>
                                <span class="ml-2 px-2 py-1 bg-indigo-100 text-indigo-800 text-xs font-semibold rounded-full">
                                    {{ product.category }}
                                </span>
                            </div>

                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                                {{ product.description }}
                            </p>

                            <div class="flex items-center justify-between">
                                <span class="text-2xl font-bold text-indigo-600">
                                    ${{ product.price }}
                                </span>
                                <span class="{% if product.inStock %}text-green-600{% else %}text-red-600{% endif %} text-sm font-medium">
                                    {% if product.inStock %}
                                        ‚úì In Stock
                                    {% else %}
                                        ‚úó Out of Stock
                                    {% endif %}
                                </span>
                            </div>

                            {% if product.tags %}
                                <div class="mt-4 flex flex-wrap gap-2">
                                    {% for tag in product.tags %}
                                        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                                            #{{ tag }}
                                        </span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No products found</h3>
                <p class="mt-1 text-sm text-gray-500">Try adjusting your search terms</p>
            </div>
        {% endif %}

        {# Pagination #}
        {% if totalPages > 1 %}
            <div class="mt-8">
                <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
                    <div class="flex flex-1 justify-between sm:hidden">
                        {% if page > 1 %}
                            <a href="{{ path('product_search', {q: query, category: category, score: score, page: page - 1}) }}"
                               class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                Previous
                            </a>
                        {% endif %}
                        {% if page < totalPages %}
                            <a href="{{ path('product_search', {q: query, category: category, score: score, page: page + 1}) }}"
                               class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                Next
                            </a>
                        {% endif %}
                    </div>
                    <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                        <div>
                            <p class="text-sm text-gray-700">
                                Showing <span class="font-medium">{{ ((page - 1) * limit) + 1 }}</span> to <span class="font-medium">{{ min(page * limit, totalResults) }}</span> of <span class="font-medium">{{ totalResults }}</span> results
                            </p>
                        </div>
                        <div>
                            <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                                {% if page > 1 %}
                                    <a href="{{ path('product_search', {q: query, category: category, score: score, page: page - 1}) }}"
                                       class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                        <span class="sr-only">Previous</span>
                                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                {% endif %}

                                {% for i in 1..totalPages %}
                                    {% if i == 1 or i == totalPages or (i >= page - 2 and i <= page + 2) %}
                                        <a href="{{ path('product_search', {q: query, category: category, score: score, page: i}) }}"
                                           class="relative inline-flex items-center px-4 py-2 text-sm font-semibold {% if i == page %}bg-indigo-600 text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600{% else %}text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0{% endif %}">
                                            {{ i }}
                                        </a>
                                    {% elseif i == page - 3 or i == page + 3 %}
                                        <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 focus:outline-offset-0">
                                            ...
                                        </span>
                                    {% endif %}
                                {% endfor %}

                                {% if page < totalPages %}
                                    <a href="{{ path('product_search', {q: query, category: category, score: score, page: page + 1}) }}"
                                       class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                        <span class="sr-only">Next</span>
                                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                        </svg>
                                    </a>
                                {% endif %}
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}

    {# Back Button #}
    <div class="mt-8 text-center">
        <a href="{{ path('product_index') }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
            ‚Üê Back to Search
        </a>
    </div>
</div>
{% endblock %}
